<!DOCTYPE html>
<html lang="en">
   <head>
      <%- include('./common/header') %>
      <title><% if(locals.error){ %>Blog Not Found <% }else{ %>  <%= blog.title %><% } %></title>
   </head>
   <body>
      <%- include('./common/nav') %>
      <section class="py-3 py-md-5">
         <div class="container">
            <% if(locals.error){ %>
               <div class="alert alert-danger text-center" role="alert">
                  <%= locals.error %> <a href="/" class="fw-bold text-body"><u>Blogs</u></a>
               </div>
            <% }else{ %> 
            <div class="row gy-3 gy-md-4 gy-lg-0 align-items-lg-center">
               <div class="col-12 col-lg-6 col-xl-5">
                  <img class="img-fluid rounded" loading="lazy" src="/public/<%= blog.coverImage %>" alt="About 1">
               </div>
               <div class="col-12 col-lg-6 col-xl-7">
                  <div class="row justify-content-xl-center">
                     <div class="col-12 col-xl-11">
                        <div class="mt-4">
                           <img src="/public/<%= blog.createdBy.profileImageURL %>" class="rounded-circle mt-4"  width="50" height="50" />
                           <p class="fw-bold">Created By: <%= blog.createdBy.fullName %></p>
                        </div>
                        <h2 class="mb-3"><%= blog.title %></h2>
                        <div class="row gy-4 gy-md-0 gx-xxl-5X">
                           <div class="col-12 col-md-12">
                              <div class="d-flex">
                                 <%= blog.body %>
                              </div>
                           </div>
                        </div>
                     </div>
                  </div>
               </div>
            </div>
            <% } %>
         </div>
      </section>
      <%- include('./common/footer') %>